<div class="col-lg-4 col-xl-4 col-md-4 mx-auto push-down">
  <%= form_tag do %>
    <h2 class="mt-5">Please Log In</h2>
    <div class="form-group">
      <%= label_tag :email, 'Email:' %>
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password, params[:password], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Login", class: 'form-control btn btn-dark'%>
    </div>
  <% end %>
  <p>Don't have an account yet? <%= link_to 'Sign Up', register_path, class: 'text text-info' %> </p>
</div>
