<div class="col-lg-10 col-xl-10 col-md-10 mx-auto mt-5">
  <h3 class="text-center"><%= @ticket.title %></h3>

  <section>
    <div><%= @ticket.description%></div>
  </section>

  <%= link_to "Tickets", tickets_url  %>

  <%= render 'comments/comments_form', id: @ticket.id %>
  <div id="comments" class=" <%= @ticket.comments.any? ? 'scroll' : nil %>">
    <%= render @ticket.comments %>
  </div>
</div>
